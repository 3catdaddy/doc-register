<p id="notice"><%= notice %></p>

<h1>Lietotāji</h1>

<table>
  <thead>
    <tr>
      <th>Lietotājvārds</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.username %></td>
        <td><%= link_to 'Apskatīt', user %></td>
        <td><%= link_to 'Labot', edit_user_path(user) %></td>
        <td><%= link_to 'Dzēst', user, method: :delete, data: { confirm: 'Vai tiešām?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Jauns lietotājs', new_user_path %>
